!
no aaa root
!
transceiver qsfp default-mode 4x10G
!
service routing protocols model multi-agent
!
hostname {{ inventory_hostname }}
ip domain lookup vrf MANAGEMENT source-interface Management1
{% for i in name_server %}
ip name-server vrf MANAGEMENT {{ i.host }} priority {{ loop.index0 }}
{% endfor %}
dns domain yamause
ip domain-list yamause
!
snmp-server community {{ snmp_server.community }} ro
snmp-server vrf MANAGEMENT
!
spanning-tree mode mstp
!
{% for i in vlans %}
vlan {{ i.vid }}
   name {{ i.name }}
!
{% endfor %}
vrf instance MANAGEMENT
!
{% for i in radius_server %}
radius-server host {{ i.host }} vrf MANAGEMENT key {{ i.secret }}
{% endfor %}
!
aaa group server radius RAD-GROUP
{% for i in radius_server %}
   server {{ i.host }} vrf MANAGEMENT
{% endfor %}
!
aaa authentication login default group RAD-GROUP local
aaa authentication enable default group RAD-GROUP local
aaa authorization serial-console
aaa authorization exec default group RAD-GROUP local
!
{{ include_interface_config }}
!
interface Loopback0
   description EVPN
   ip address {{ evpn_endpoint }}
!
interface Loopback1
   description VXLAN
   ip address {{ vxlan_endpoint }}
!
interface Management1
   vrf MANAGEMENT
   ip address {{ management }}
!
interface Vxlan1
   vxlan source-interface Loopback1
   vxlan udp-port 4789
{% for i in vlans %}
{% if i.vni %}
   vxlan vlan {{ i.vid }} vni {{ i.vni }}
!
{% endif %}
{% endfor %}
!
ip routing
no ip routing vrf MANAGEMENT
!
ip as-path access-list myorigin permit ^$ any
!
ipv6 unicast-routing
!
ip route vrf MANAGEMENT 0.0.0.0/0 10.19.30.254 name ix-gw-01
!
route-map ADV-LO permit 10
   description EVPN Interface
   match interface Loopback0
!
route-map ADV-LO permit 20
   description VXLAN Interface
   match interface Loopback1
!
route-map gracefulshut permit 10
   match as-path myorigin
   set community GSHUT
!
router bgp {{ asn }}
   router-id {{ evpn_endpoint | ansible.utils.ipaddr('address') }}
   no bgp default ipv4-unicast
   maximum-paths 32
   neighbor EVPN peer group
   neighbor EVPN update-source Loopback0
   neighbor EVPN description EVPN
   neighbor EVPN ebgp-multihop 2
   neighbor EVPN send-community
   neighbor UNDER peer group
   neighbor UNDER description Underlay Connection
{% for i in bgp_peer %}
   neighbor {{ i.neighbor }} peer group {{ i.group }}
   neighbor {{ i.neighbor }} remote-as {{ i.remote_as }}
   !
{% endfor %}
{% for i in vlans %}
{% if i.vni %}
   vlan {{ i.vid }}
      rd {{ evpn_endpoint | ansible.utils.ipaddr('address') }}:{{ i.vid }}
      route-target both {{ i.vid }}:{{ i.vni }}
      redistribute learned
   !
{% endif %}
{% endfor %}
   address-family evpn
      neighbor EVPN activate
   !
   address-family ipv4
      neighbor UNDER activate
      redistribute connected route-map ADV-LO
!
management ssh
   vrf MANAGEMENT
      no shutdown
   !
   vrf default
      shutdown
!
end
